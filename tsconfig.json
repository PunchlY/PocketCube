{
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*",
    ],
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo",
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./build",
        "rootDir": "./src",
        "outDir": "./build",
        "moduleResolution": "Node",
        "strictNullChecks": false,
        "removeComments": true,
        "allowJs": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
    },
}
